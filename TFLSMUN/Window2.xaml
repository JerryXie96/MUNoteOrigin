<Window x:Class="TFLSMUN.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="无组织核心磋商" Height="196" Width="432" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="动议人：" Height="27" HorizontalAlignment="Left" Margin="12,31,0,0" Name="label1" VerticalAlignment="Top" Width="54" />
        <TextBox Height="24" HorizontalAlignment="Right" Margin="0,32,200,0" Name="name" VerticalAlignment="Top" Width="88" Opacity="0.8" />
        <Label Content="总时间（分钟）：" Height="27" HorizontalAlignment="Left" Margin="12,91,0,0" Name="label3" VerticalAlignment="Top" Width="109" />
        <TextBox Height="24" HorizontalAlignment="Right" Margin="0,92,172,0" Name="totaltime" VerticalAlignment="Top" Width="116" Opacity="0.8" />
        <Button Content="确定" Height="23" HorizontalAlignment="Left" Margin="312,33,0,0" Name="ok" VerticalAlignment="Top" Width="75" Click="ok_Click" Opacity="0.8" Background="White" BorderBrush="White" />
        <Button Content="取消" Height="23" HorizontalAlignment="Left" Margin="312,80,0,0" Name="cancel" VerticalAlignment="Top" Width="75" Click="cancel_Click" Opacity="0.8" Background="White" BorderBrush="White" />
    </Grid>
</Window>
